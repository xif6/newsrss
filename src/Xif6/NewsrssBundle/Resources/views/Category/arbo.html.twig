{% macro recursiveCategories(categories) %}
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('xif6_newsrss_category', { 'id': category.id, 'path': category.path, '_format': 'html' }) }}">{{ category.name }}</a>
                {% if category.__children %}
                    {{ _self.recursiveCategories(category.__children) }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

