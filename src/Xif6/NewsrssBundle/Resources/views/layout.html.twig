{% extends '::base.html.twig' %}

{% block meta %}
    {# media queries : window width of the sreen AND zoom to 1 #}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#<link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">#}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" media="screen">
    {% stylesheets '@Xif6NewsrssBundle/Resources/public/css/*' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <link
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.9/css/bootstrap-material-design.css"
        rel="stylesheet" media="screen">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.9/css/ripples.css" rel="stylesheet"
          media="screen">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">
{% endblock %}

{% block body %}
    {#<div class="container-fluid">#}
    <div class="container">
        <header class="row">
            {% block header %}{% include 'Xif6NewsrssBundle::header.html.twig' %}{% endblock %}
        </header>
        <div class="row">
            {% block container %}
            <div class="col-sm-8">
                {% block content_left %}{% endblock %}
            </div>
            <div class="col-sm-4">
                {% block content_right %}
                    {{ app.user.username|default('no user') }}
                    {% render(path('fos_user_security_login')) %}
                    {% render(path('xif6_newsrss_category_arbo')) %}
                    {% render(path('xif6_newsrss_flux_most_users')) %}
                    {% render(path('xif6_newsrss_flux_last')) %}
                {% endblock %}
            </div>
        </div>
        {% endblock %}
        <footer class="row">
            {% block footer %}{% include 'Xif6NewsrssBundle::footer.html.twig' %}{% endblock %}
        </footer>
    </div>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.js') }}"></script>
    {#<script src="{{ asset('js/bootstrap.js') }}"></script>#}
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.9/js/material.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.5.9/js/ripples.js"></script>
{% endblock %}
{% block tracking %}
    {{ parent() }}
    {% include 'Xif6NewsrssBundle::google-analytics.html.twig' %}
    {% include 'Xif6NewsrssBundle::xiti.html.twig' %}
{% endblock %}
